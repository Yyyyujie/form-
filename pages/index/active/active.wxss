/* pages/index/active/active.wxss */
.cellBox{
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.cell{
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cell:last-child{
  border-bottom: none;
}
.cell .iconfont{
  color: #ccc;
  font-size: 38rpx;
}
.pickBox{
  display: flex;
  align-items: center;
}
.number{
  width: 40rpx;
  text-align: center;
}
.pickBox .add{
  padding:0 4rpx;
}
.active{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  background: #fed784
}
.remarks{
  flex: 1;
  text-align: right;
}