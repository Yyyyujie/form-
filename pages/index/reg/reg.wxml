<view class="regBox">
    <view class='logoBox'>
        <image src='/assets/image/head.jpg'></image>
    </view>
    <view>我的logo</view>
</view>
<view class='formBox'>
    <view class="inputBox">
      <view class="iconfont icon-yonghuming"></view>
      <input placeholder='请输入手机号码'></input>
    </view>
    <view class="inputBox">
      <view class="iconfont icon-yonghuming"></view>
      <input placeholder='请输入验证码'></input>
      <view class="sendCode">获取验证码</view>
    </view>
    <view class="inputBox">
      <view class="iconfont icon-yonghuming"></view>
      <input placeholder='请输入姓名'></input>
    </view> 
    <view class="inputBox">
      <view class="iconfont icon-yonghuming"></view>
      <view class='radioBox'>
         <view wx:for="{{sex}}" wx:key="sex" class='sex' data-index="{{index}}" bindtap='radioChange'>
              <view class="iconfont {{index==sexValue?'icon-xuanzhong':'icon-weixuanzhong'}}"></view>
              {{item.name}}
         </view>
      </view>
    </view> 
    <button class="sub">提交</button>
</view>