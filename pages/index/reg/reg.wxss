.regBox{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 50rpx;
  font-size: 30rpx;
}
.logoBox{
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.logoBox image{
  width: 100%;
  height: 100%;
}
.formBox{
  width: 70%;
  margin: 30rpx auto;
  font-size: 30rpx;
}
.inputBox{
  display: flex;
  align-items: center;
  height: 100rpx;
  /* justify-content: center; */
  width: 100%;
}
.inputBox .iconfont{
  margin-right: 15rpx;
}
.inputBox input{
  height: 100rpx;
  width: 100%;
  border-bottom: 1rpx solid #f5f5f5;
  flex: 1;
}
.sendCode{
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 10rpx;
  color: #ccc;
  border-left: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
}
.radioBox,.sex{
  display: flex;
  align-items: center;
}
.sex{
  margin-right: 20rpx;
}
.sub{
  height: 80rpx;
  background: #ccc;
  line-height: 80rpx;
  color: #fff;
  font-size: 30rpx;
  margin-top: 40rpx;
}